<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spinner_user_no" />

     <Spinner
         android:id="@+id/spinner_user_no"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:prompt="@string/spinner_user_no" />

     <TextView
         android:id="@+id/textView2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/spinner_using_type" />

    <Spinner
        android:id="@+id/spinner_using_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:prompt="@string/spinner_using_type" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="startExperiment"
        android:text="@string/button_start" />
    
</LinearLayout>
